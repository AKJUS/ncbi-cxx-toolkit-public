#
# $Id$
#
# Generate source and header files from protobuf spec, typically for
# use with gRPC.
#
# (NOTE: hard-wired for the C++ Toolkit directory structure.)
#

-include $(builddir)/Makefile.mk

SRCDIR = $(top_srcdir)/src/$(MODULE_PATH)
INCLUDEDIR = $(top_srcdir)/include/$(MODULE_PATH)

SPEC = $(MODULE_ASN) # sic
FILES = $(MODULE).files
IMPDIRS = $(dir $(IMPFILES))
PROTOC_FLAGS = $(IMPDIRS:%=-I%)

GRPC_BIN = @GRPC_BIN@
PROTOC = $(GRPC_BIN)/protoc
GRPC_CPP_PLUGIN = $(GRPC_BIN)/grpc_cpp_plugin

all: sources

all_files: sources

sources: $(FILES)

clean_sources:
	-$(RM) $(FILES)

purge_sources:
	-$(RM) $(FILES) *.pb.cpp $(INCLUDEDIR)/*.pb.h

purge_all_sources:
	-$(RM) $(FILES) *.pb.cpp $(INCLUDEDIR)/*.pb.h

purge_all_files:
	-$(RM) $(FILES) *.pb.cpp $(INCLUDEDIR)/*.pb.h

$(FILES): $(SPEC) $(PROTOC) $(GRPC_CPP_PLUGIN) $(MODULE).module $(IMPDEPS)
	$(PROTOC) $(PROTOC_FLAGS) --cpp_out=. $(SPEC)
	$(PROTOC) $(PROTOC_FLAGS) --grpc_out=. \
	    --plugin=protoc-gen-grpc=$(GRPC_CPP_PLUGIN) $(SPEC)
	-$(RM) $(MODULE).pb.cpp $(MODULE).grpc.pb.cpp \
	    $(INCLUDEDIR)/$(MODULE).pb.h $(INCLUDEDIR)/$(MODULE).grpc.pb.h
	$(MKDIR) -p $(INCLUDEDIR)
	mv $(MODULE).pb.cc      $(MODULE).pb.cpp
	mv $(MODULE).grpc.pb.cc $(MODULE).grpc.pb.cpp
	mv $(MODULE).pb.h $(MODULE).grpc.pb.h $(INCLUDEDIR)/
	@$(TOUCH) $@

$(MODULE).module:
	@$(TOUCH) $@
